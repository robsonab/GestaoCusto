@model GestaoCustoBusiness.Model.Ingrediente

@{
    ViewData["Title"] = "Alterar";
}

<h2>Alterar</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Ingrediente</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="ProdutoId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                <input asp-for="ReceitaId" type="hidden" />
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Quantidade" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
        </div> 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-receita="@Model.ReceitaId">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
