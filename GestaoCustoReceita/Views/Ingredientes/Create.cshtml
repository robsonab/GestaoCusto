@model GestaoCustoBusiness.Model.Ingrediente

@{
    ViewData["title"] = "Adicionar ingrediente";
}

<h2>@ViewBag.Receita</h2>

<form asp-action="Create">
    <h4>Adicionar ingrediente</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="ProdutoId" class="col-md-2 control-label"></label>
            <div class="col-md-8" >
                <div style="float: left">
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                    <input asp-for="ReceitaId" type="hidden" value="@ViewBag.ReceitaId" />                    
                </div>                
                <a asp-controller="Produtos" asp-action="Create" asp-route-receita="@ViewBag.ReceitaId" class="btn btn-primary col-md-2" role="button" aria-disabled="true">Novo</a>
            </div>            
        </div>
        <div class="form-group">
            <label asp-for="Quantidade" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-receita="@ViewBag.ReceitaId">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
