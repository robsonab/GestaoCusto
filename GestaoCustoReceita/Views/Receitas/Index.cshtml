@model IEnumerable<GestaoCustoBusiness.Model.Receita>
@{
    ViewData["Title"] = "Receitas";
}

<h2>Receitas</h2>

<p>
    <a asp-action="Create">Nova receita</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th align="right">
                @Html.DisplayNameFor(model => model.CustoTotal)
            </th>
            <th align="right">
                @Html.DisplayNameFor(model => model.Qtd)
            </th>
            <th align="right">
                @Html.DisplayNameFor(model => model.CustoUnitario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </a>
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.CustoTotal)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.Qtd)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.CustoUnitario)
                </td>
                <td>
                    <a asp-controller="Ingredientes" asp-action="Create" asp-route-id="@item.Id">Adicionar</a> |
                    <a asp-controller="Ingredientes" asp-action="Index" asp-route-receita="@item.Id">Visualizar</a> |                    
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
